<h1> Forgot Password? </h1>
<%= flash[:notice] %>
<%= form_for(:user) do |f| %>
<div class="field">
	<%= f.label :email %><br>
	<%= f.text_field :email %>
</div>
<div class="actions">
	<%= f.submit "Get New Password" %>
</div>
<% end %>

<%= link_to "Sing In", account_login_path %><br>
<%= link_to "Sign Up" , account_signup_path %>