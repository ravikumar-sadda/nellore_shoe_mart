<h1> Sign In </h1>
<%= flash[:notice] %>
<%= form_for(:user) do |f| %>
<div class="field">
	<%= f.label :email %><br>
	<%= f.text_field :email, placeholder: "Enter Your Email" %>
</div>
<div class="field">
	<%= f.label :password %><br>
	<%= f.password_field :password, placeholder: "Enter Your password" %>
</div>
<div class="actions">
	<%= f.submit "login" %>
</div>
<% end %>
<%= link_to "Forgot Password?" , account_forget_password_path %><br>
<%= link_to "Sign Up" , account_signup_path %>
